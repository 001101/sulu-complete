{% extends "ClientWebsiteBundle:Website:master.html.twig" %}

{% block title %}{{ content.title }}{% endblock %}

{% block content %}
    <div id="content">
        <div class="row" vocab="http://schema.org/" typeof="Content">
            <div class="col-lg-12">
                <h1 class="page-header" property="title">{{ content.title }}</h1>

                {% autoescape false %}
                <div property="article">{{ content.article }}</div>
                {% endautoescape %}

                <h3>Images (display-options: {{ content.images.displayOption }})</h3>

                <div class="row" property="images" typeof="collection">
                    {% for image in content.images.data %}
                        <div class="col-lg-4" rel="images" typeof="images">
                            <img src="{{ image.thumbnails['170x170'].url }}" alt="{{ image.name }}"/>

                            <p class="text-primary">{{ image.title }}</p>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
