{% extends "ClientWebsiteBundle:views:master.html.twig" %}

{% block meta %}
    <meta name="title" content="{{ content.extensions.seo.data.title|default('') }}">
    <meta name="keywords" content="{{ content.extensions.seo.data.keywords|default('') }}">
    <meta name="description" content="{{ content.extensions.seo.data.keywords|default('') }}">
    {% if content.extensions.seo.data is not null %}
        <meta name="robots" content="{{ content.extensions.seo.data.noIndex ? 'noIndex' : 'index' }}">
        <meta name="robots" content="{{ content.extensions.seo.data.noFollow ? 'nofollow' : 'follow' }}">
    {% endif %}
{% endblock %}

{% block title %}{{ content.title }}{% endblock %}

{% block content %}
    <div id="content" vocab="http://schema.org/" typeof="Content">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" property="title">{{ content.title }}</h1>
                {% autoescape false %}
                <div property="article">{{ content.article }}</div>
                {% endautoescape %}
            </div>
        </div>


        <div class="row">

            <div class="col-lg-12">
                <h2>Smart-Content</h2>
            </div>

            <div property="smartcontent">
                {% for smartcontent in content.smartcontent.data %}
                    <div class="col-lg-4">
                        <h2><a href="{{ content_path(smartcontent) }}">{{ smartcontent.title }}</a></h2>
                        {% autoescape false %}
                        {{ smartcontent.article }}
                        {% endautoescape %}
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}
